<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        xmlns:android="http://schemas.android.com/apk/res/android">
    <TableRow
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:background="@android:color/black"
            android:paddingTop="@dimen/top_bar"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/bar_padding"
            android:layout_height="wrap_content">
        <FrameLayout android:layout_weight="0.8"
                     android:layout_width="0dp"
                     android:layout_height="wrap_content">
            <ImageView
                    android:layout_gravity="center"
                    android:layout_width="@dimen/ic_standard"
                    android:layout_height="@dimen/ic_standard"
                    android:src="@drawable/ic_block"
                    android:background="@drawable/ic_bg"
                    />
        </FrameLayout>


        <FrameLayout
                android:visibility="gone"
                android:layout_width="0dp"
                android:layout_weight="4"
                android:layout_height="wrap_content"
                android:id="@+id/fl_search"
                >
            <EditText
                    android:id="@+id/txt_search"
                    android:text="Search.."
                    android:singleLine="true"
                    android:textColor="@color/white"
                    android:layout_width="match_parent"
                    android:layout_gravity="center_vertical"
                    android:layout_height="wrap_content"/>
            <Button
                    android:id="@+id/btn_cancel"
                    android:layout_width="@dimen/top_bar"
                    android:layout_height="@dimen/top_bar"
                    android:background="@drawable/btn_cancel_bg"
                    android:text="x"
                    android:textSize="@dimen/title_size"
                    android:layout_marginLeft="@dimen/bar_padding"
                    android:textColor="@color/grey"
                    android:layout_gravity="right|center_vertical"
                    />
        </FrameLayout>
        <FrameLayout
                android:id="@+id/fl_contain"
                android:layout_width="0dp"
                android:layout_weight="3.2"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                >
            <TextView
                    android:layout_gravity="left"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:textSize="@dimen/title_size"
                    android:text="@string/app_name"
                    android:layout_marginLeft="@dimen/bar_padding"
                    />


        </FrameLayout>
        <FrameLayout
                android:layout_weight="1.1"
                android:layout_height="match_parent"
                android:layout_width="0dp"
                >
            <ImageView
                    android:layout_gravity="right"
                    android:layout_width="@dimen/ic_small"
                    android:layout_height="@dimen/ic_small"
                    android:src="@drawable/ic_down_double"
                    android:id="@+id/iv_down"
                    />
            <ImageView
                    android:layout_gravity="left"
                    android:layout_width="@dimen/ic_small"
                    android:layout_height="@dimen/ic_small"
                    android:src="@drawable/ic_search"
                    android:id="@+id/iv_search"
                    />
        </FrameLayout>

    </TableRow>
</LinearLayout>
